@model CronofyCSharpSampleApp.Models.Calendar

<h2>@ViewData["profileName"] - New Calendar</h2>

<div class="well">
    @using(Html.BeginForm("Create", "Calendars", FormMethod.Post, new { @class = "form-horizontal" })){
        @Model.ResponseError()

        @Html.ValidationSummary(true);
    
        @Html.HiddenFor(model => model.ProfileId)
        <fieldset>
        <div class="form-group">
            @Html.LabelFor(model => model.Name, new { @class = "control-label col-lg-2" })
            <div class="col-lg-10">
                @Html.TextBoxFor(model => model.Name, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Name)
            </div>
        </div>

        <div class="form-group">
            <div class="col-lg-10">
                <input type="submit" value="Create" class="btn btn-success btn-primary" />
            </div>
        </div>
        </fieldset>
    }
</div>